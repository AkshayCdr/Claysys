
@model int

<h2>Edit Image</h2>

@if (ViewBag.ImageData != null)
{
    <img src="data:image;base64,@ViewBag.ImageData" alt="Image" />
}

@using (Html.BeginForm("Edit", "Image", new { id = Model }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="file" />
    <input type="submit" value="Save" />
}


